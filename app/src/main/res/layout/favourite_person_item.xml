<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/first_name"
        android:layout_width="0dp"
        android:layout_height="19dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toStartOf="@+id/pdf_button"
        app:layout_constraintStart_toEndOf="@+id/favourite_button"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/pdf_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/background_light"
        app:srcCompat="@drawable/ic_book_black_24dp"
        tools:layout_editor_absoluteX="336dp"
        tools:layout_editor_absoluteY="18dp" />

    <TextView
        android:id="@+id/place_of_work"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/pdf_button"
        app:layout_constraintStart_toEndOf="@+id/favourite_button"
        app:layout_constraintTop_toBottomOf="@+id/first_name" />

    <ImageButton
        android:id="@+id/favourite_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_star_border_black_24dp" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pdf_button"
        app:layout_constraintStart_toEndOf="@+id/favourite_button"
        app:layout_constraintTop_toBottomOf="@+id/place_of_work" />

</android.support.constraint.ConstraintLayout>